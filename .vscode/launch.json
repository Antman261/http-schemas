    "version": "0.2.0",
    "configurations": [
        {
            "name": "_Mocha Explorer",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "protocol": "inspector",
            "timeout": 5000,
            "stopOnEntry": false,
            "skipFiles": [
